<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/leap">

        <ImageView
            android:id="@+id/coffee_cup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/coffee_cup"/>

        <ImageView
            android:id="@+id/coffee_cup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/coffee_cup" />
        <ImageView
            android:id="@+id/coffee_cup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/coffee_cup" />
        <ImageView
            android:id="@+id/coffee_cup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/coffee_cup" />
    </LinearLayout>

    <ImageView
        android:id="@+id/leap"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/yellow_bulb"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/coffee_cup" />

    <ImageView
        android:id="@+id/yellow_bulb"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/yellow_bulb" />

</RelativeLayout>